}
/* Tamaños de botones*/
.boton.medio {
	width: 450px;
}
.boton2.peque {
	width: 150px;
}
.boton.largo {
	width: 550px;
}

/*Efectos en los tamaños*/
/*El boton.radio hace que las esquinas del boton sean circulares */
.boton.radio {
	border-radius: 30px;
}
/*El boton.radio hace que el boton se haga mas pequeño*/
.boton:hover {
	box-shadow: 0px 0px 0px;
	padding: 12px;
}

